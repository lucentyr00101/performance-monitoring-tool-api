# General
NODE_ENV=development
API_VERSION=v1

# Ports
GATEWAY_PORT=4000
AUTH_SERVICE_PORT=4001
EMPLOYEE_SERVICE_PORT=4002
GOALS_SERVICE_PORT=4003
REVIEWS_SERVICE_PORT=4004
ANALYTICS_SERVICE_PORT=4005

# MongoDB
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme
AUTH_DB_NAME=auth_db
EMPLOYEE_DB_NAME=employee_db
GOALS_DB_NAME=goals_db
REVIEWS_DB_NAME=reviews_db
ANALYTICS_DB_NAME=analytics_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Password Reset
PASSWORD_RESET_EXPIRY=1h

# Bcrypt
BCRYPT_ROUNDS=12

# Email (Ethereal - get credentials from https://ethereal.email/)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-ethereal-user@ethereal.email
SMTP_PASS=your-ethereal-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Service URLs (for inter-service communication in Docker)
AUTH_SERVICE_URL=http://auth:4001
EMPLOYEE_SERVICE_URL=http://employees:4002
GOALS_SERVICE_URL=http://goals:4003
REVIEWS_SERVICE_URL=http://reviews:4004
ANALYTICS_SERVICE_URL=http://analytics:4005

# For local development (outside Docker)
AUTH_SERVICE_URL_LOCAL=http://localhost:4001
EMPLOYEE_SERVICE_URL_LOCAL=http://localhost:4002
GOALS_SERVICE_URL_LOCAL=http://localhost:4003
REVIEWS_SERVICE_URL_LOCAL=http://localhost:4004
ANALYTICS_SERVICE_URL_LOCAL=http://localhost:4005
MONGODB_URI_LOCAL=mongodb://localhost:27017
